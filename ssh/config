# ~/.ssh/config
# see man ssh_config

Host phalanx
  Hostname sentinel.ddns.me
  User rolf
  Port 2222

Host militia
  Hostname militia.home
  User rolf
  Port 22
  ProxyCommand ssh -p 2222 -q -W %h:%p sentinel.ddns.me

Host router
  Hostname router.home
  User admin
  Port 22
  ProxyCommand ssh -p 2222 -q -W %h:%p sentinel.ddns.me

